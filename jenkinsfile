pipeline {
    agent any

    environment {
        TESTCONTAINERS_RYUK_DISABLED = "true"
        TESTCONTAINERS_CHECKS_DISABLE = "true"
    }

    stages {

        stage("Checkout Code") {
            steps {
                git url: 'https://github.com/Venuboddu2005/spring-petclinic.git', branch: 'main'
            }
        }

        stage("Build Code") {
            steps {
                sh """
                    ./mvnw clean package -DskipTests
                """
            }
        }

        stage("Run-Unit-Tests") {
            steps {
                sh """
                    ./mvnw test
                """
            }
        }
    }
}
